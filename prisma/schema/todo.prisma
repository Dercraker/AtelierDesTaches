model Todo {
  id          String   @id @default(nanoid(11))
  slug        String   @unique
  title       String
  description String?
  status      Status   @default(PENDING)
  dueDate     DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  ownerId      String
  owner        User    @relation(fields: [ownerId], references: [id])
}

enum Status {
  PENDING
  IN_PROGRESS
  COMPLETED
}
