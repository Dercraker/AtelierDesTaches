generator client {
  provider = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

//https://github.com/CarterGrimmeisen/zod-prisma
generator zod {
  provider = "zod-prisma"
  output = "../../src/types/prisma"

  relationModel = true
  modelCase = "PascalCase"
  modelSuffix              = "Model"
  useDecimalJs             = true
  prismaJsonNullability    = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
